<%- include('../partials/header') %>

<br><h2 class="text-bg-warning p-3"> Exercise Details(SHAREPAGE)</h2><br><br>
<div>
    <form  action="/sharedExercises/index" method="POST">

    <label class="form-label">Exercise Name:</label>
    <input class="form-control" type="text" name="exerciseName"><br>

    <label class="form-label">Description:</label>
    <textarea class="form-control" name="description"></textarea><br>
    
    <label class="form-label">Exercise Review:</label>
    <textarea class="form-control" name="review"></textarea><br>

    <label class="form-label">Exercise Rating</label>
    <input class="form-control" type="number" name="sets" min="1" max="10"><br>

   

    <label class="form-label">Video Link:</label>
    <input 
        type="url" name="video" id="url" 
        placeholder="https://example.com"
        pattern="https://.*"
        class="form-control"
    ><br>

    <button class="btn btn-warning" type="submit">Add Exercise</button>
    </form> 
</div>

exerciseName: {
    type: String,
    required: true
  },
  description: String,
  review: String,
  owner: {
    type: Schema.Types.ObjectId,
    ref: "User",
    required: true,
  },
  
})




